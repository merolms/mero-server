datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Address {
  address_1     String?
  address_2     String?
  city          String?
  createdAt     DateTime       @default(now())
  id            String         @id @default(cuid())
  organizations Organization[]
  state         String?
  updatedAt     DateTime       @updatedAt
  zip           Int?
}

model Organization {
  addressId   Address? @relation(fields: [addressIdId], references: [id])
  addressIdId String?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
}

model Team {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  roles       String   @unique
  updatedAt   DateTime @updatedAt
  users       User[]
}